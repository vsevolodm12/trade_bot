# ── Telegram ──────────────────────────────────────────────────
TELEGRAM_BOT_TOKEN=your_token_from_botfather

# Через запятую. Первый получает уведомления от веб-алертов.
# Узнать свой ID: написать боту @userinfobot
ALLOWED_USER_IDS=123456789

# ── TwelveData ────────────────────────────────────────────────
TWELVEDATA_API_KEY=your_key_from_twelvedata_com

# Интервал батч-валидации TwelveData (секунды). 10800 = 3 часа
TD_BATCH_INTERVAL_SEC=10800

# ── Веб-интерфейс ─────────────────────────────────────────────
WEB_PORT=8080
WEB_LOGIN=admin
WEB_PASSWORD=changeme_to_strong_password

# Случайная строка для подписи сессионных cookie
# Генерация: python3 -c "import secrets; print(secrets.token_hex(32))"
SESSION_SECRET=change-this-to-random-string

# ── База данных ───────────────────────────────────────────────
# В Docker: /app/data/bot.db (общий volume между bot и web)
# Локально: bot.db
DB_PATH=/app/data/bot.db

# ── Telegram Mini App (опционально) ───────────────────────────
# Публичный URL веб-интерфейса для кнопки в боте
# Пример: https://trade.example.com
WEB_URL=
